local Player = game.Players.LocalPlayer
local goldcolorChange = "Gold"
local purplecolorChange = "Royal purple"

-- Changes the healthbar color depending if the healthbar color is gold or not
if game.Players[Player.Name].PlayerGui.StatGui.Container.Health.Slider.BackgroundColor3 == Color3.fromRGB(239,184,56) then
    game.Players[Player.Name].PlayerGui.StatGui.Container.Health.Slider.BackgroundColor3 = Color3.fromRGB(98, 37, 209)
else
    game.Players[Player.Name].PlayerGui.StatGui.Container.Health.Slider.BackgroundColor3 = Color3.fromRGB(239,184,56)
end

-- Changes the scroomhead color depending if the scroomhead color is gold or not
if game.Workspace.Live[Player.Name]:FindFirstChild("ScroomHead") then
    if game.Workspace.Live[Player.Name].ScroomHead.BrickColor == BrickColor.New(goldcolorChange) then
        game.Workspace.Live[Player.Name].ScroomHead.BrickColor = BrickColor.New(purplecolorChange)
    else
        game.Workspace.Live[Player.Name].ScroomHead.BrickColor = BrickColor.New(goldcolorChange)
    end
end
-- Changes the hammer color depending if the hammer color is gold or not
if game.Workspace.Live[Player.Name].Torso:FindFirstChild("Hammer") then
    if game.Workspace.Live[Player.Name].Torso.Hammer.BrickColor == BrickColor.New(goldcolorChange) then
        game.Workspace.Live[Player.Name].Torso.Hammer.BrickColor = BrickColor.New(purplecolorChange)
    else
        game.Workspace.Live[Player.Name].Torso.Hammer.BrickColor = BrickColor.New(goldcolorChange)
    end
elseif game.Workspace.Live[Player.Name].Hilt:FindFirstChild("Hammer") then
    if game.Workspace.Live[Player.Name].Hilt.Hammer.BrickColor == BrickColor.New(goldcolorChange) then
        game.Workspace.Live[Player.Name].Hilt.Hammer.BrickColor = BrickColor.New(purplecolorChange)
    else
        game.Workspace.Live[Player.Name].Hilt.Hammer.BrickColor = BrickColor.New(goldcolorChange)
    end
end
-- Changes the wraithsword color depending if the wraithsword color is gold or not
if game.Workspace.Live[Player.Name].Torso:FindFirstChild("WraithSword") then
    if game.Workspace.Live[Player.Name].Torso.WraithSword.BrickColor == BrickColor.New(goldcolorChange) then
        game.Workspace.Live[Player.Name].Torso.WraithSword.BrickColor = BrickColor.New(purplecolorChange)
    else
        game.Workspace.Live[Player.Name].Torso.WraithSword.BrickColor = BrickColor.New(goldcolorChange)
    end
elseif game.Workspace.Live[Player.Name].Hilt:FindFirstChild("WraithSword") then
    if game.Workspace.Live[Player.Name].Hilt.WraithSword.BrickColor == BrickColor.New(goldcolorChange) then
        game.Workspace.Live[Player.Name].Hilt.WraithSword.BrickColor = BrickColor.New(purplecolorChange)
    else
        game.Workspace.Live[Player.Name].Hilt.WraithSword.BrickColor = BrickColor.New(goldcolorChange)
    end
end
